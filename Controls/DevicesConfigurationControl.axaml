<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="using:SARControlPanel.Avalonia.Controls"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:SARControlPanel.Avalonia.ViewModels"
			 xmlns:converters="using:SARControlPanel.Avalonia.Converters"
			 mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="400"
			 x:Class="SARControlPanel.Avalonia.Controls.DevicesConfigurationControl"
			 x:DataType="vm:DevicesConfigurationViewModel">

	<Design.DataContext>
		<vm:DevicesConfigurationViewModel/>
	</Design.DataContext>

	<UserControl.Styles>
		<Style Selector="HeaderedContentControl">
			<Setter Property="Template">
				<ControlTemplate>
					<Grid>
						<Grid.RowDefinitions>
							<RowDefinition Height="Auto"/>
							<RowDefinition Height="*"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>

						<!-- Header -->
						<Border
						ZIndex="1"
						Background="{DynamicResource SystemControlBackgroundAltHighBrush}"
						Padding="5,0,5,0"
						Margin="5,0,0,0">
							<TextBlock
							Text="{TemplateBinding Header}"
							FontWeight="Bold"/>
						</Border>

						<!-- Content Area -->
						<Border
						Grid.RowSpan="2"
						Padding="0,5,0,0"
						Grid.ColumnSpan="2"
						CornerRadius="4"
						Margin="0,10,0,0"
						BorderBrush="{DynamicResource SystemControlForegroundBaseMediumBrush}"
						BorderThickness="1">
							<ContentPresenter
							Name="PART_ContentPresenter"
							Padding="8"
							Content="{TemplateBinding Content}"/>
						</Border>
					</Grid>
				</ControlTemplate>
			</Setter>
		</Style>
	</UserControl.Styles>

	<HeaderedContentControl Header="Devices Configuration">
		<Grid RowSpacing="8"
			  RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto"
			  ColumnDefinitions="Auto, *" Margin="0, 8, 0, 0"
			  MaxHeight="{Binding MaxHeight, RelativeSource={RelativeSource AncestorType=UserControl}}">

			<!-- Profile Selection -->
			<TextBlock Grid.Row="0" Grid.Column="0"  Text="Profile:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<ComboBox Grid.Row="0" Grid.Column="1"
					  ItemsSource="{Binding AvailableProfiles}"
					  SelectedItem="{Binding SelectedProfileName, Mode=TwoWay}"
					  HorizontalAlignment="Stretch"/>

			<!-- Save As -->
			<TextBlock Grid.Row="1" Grid.Column="0" Text="Save As:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<TextBox Grid.Row="1" Grid.Column="1"
					 Text="{Binding ConfigName}"
					 Watermark="New config name"
					 HorizontalAlignment="Stretch"/>

			<!-- Action Buttons -->
			<StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Left">
				<Button Content="DELE" Command="{Binding DeleteProfileCommand}"
						ToolTip.Tip="Delete the selected profile"/>
				<Button Content="SAVE" Command="{Binding SaveProfileCommand}"
						ToolTip.Tip="Save current settings into profile"/>
				<Button Content="MARK" Command="{Binding MarkProfileCommand}"
						ToolTip.Tip="Mark the currently selected profile as default"/>
			</StackPanel>

			<!-- COM Port -->
			<TextBlock Grid.Row="3" Grid.Column="0" Text="COM Port:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<Grid Grid.Row="3" Grid.Column="1"
				  ColumnDefinitions="*, Auto">
				<ComboBox Grid.Column="0"
						  ItemsSource="{Binding AvailablePorts}"
						  SelectedItem="{Binding SelectedPort, Mode=TwoWay}"
						  HorizontalAlignment="Stretch"
						  Margin="0,0,8,0"/>
				<Button Grid.Column="1"
						Content="RFSH" Command="{Binding RefreshCommand}"
						ToolTip.Tip="Refresh available COM ports and reload profiles from disk"/>
			</Grid>

			<!-- Baud Rate -->
			<TextBlock Grid.Row="4" Grid.Column="0" Text="Baud Rate:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<ComboBox Grid.Row="4" Grid.Column="1"
					  ItemsSource="{Binding BaudRates}"
					  SelectedItem="{Binding SelectedBaudRate, Mode=TwoWay}"
					  HorizontalAlignment="Stretch"
					  IsEnabled="{Binding !IsConnected}"/>

			<!-- Data Bits Configuration -->
			<TextBlock Grid.Row="5" Grid.Column="0" Text="Data Bits:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<ComboBox Grid.Row="5" Grid.Column="1"
					  ItemsSource="{Binding DataBitsOptions}"
					  SelectedItem="{Binding SelectedDataBits, Mode=TwoWay}"
					  HorizontalAlignment="Stretch"
					  IsEnabled="{Binding !IsConnected}"/>

			<!-- Stop Bits Configuration -->
			<TextBlock Grid.Row="6" Grid.Column="0" Text="Stop Bits:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<ComboBox Grid.Row="6" Grid.Column="1"
					  ItemsSource="{Binding StopBitsOptions}"
					  SelectedItem="{Binding SelectedStopBits, Mode=TwoWay}"
					  HorizontalAlignment="Stretch"
					  IsEnabled="{Binding !IsConnected}"/>

			<!-- Parity Configuration -->
			<TextBlock Grid.Row="7" Grid.Column="0" Text="Parity:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<ComboBox Grid.Row="7" Grid.Column="1"
					  ItemsSource="{Binding ParityOptions}"
					  SelectedItem="{Binding SelectedParity, Mode=TwoWay}"
					  HorizontalAlignment="Stretch"
					  IsEnabled="{Binding !IsConnected}"/>

			<!-- Status and Connection -->
			<TextBlock Grid.Row="8" Grid.Column="0" Text="Status:" VerticalAlignment="Center" Margin="0,0,8,0"/>
			<Grid Grid.Row="8" Grid.Column="1"
				  ColumnDefinitions="Auto, *, Auto"
				  HorizontalAlignment="Stretch" VerticalAlignment="Center">
				<PathIcon Grid.Column="0" Margin="0 0 8 0"
						  Data="M 8,0 A 8,8 0 1,0 8,16 A 8,8 0 1,0 8,0 Z"
						  Width="16" Height="16"
						  VerticalAlignment="Center"
						  Foreground="{Binding CurrentState, Converter={x:Static converters:ConnectionStateToColorConverter.Instance}}"/>

				<TextBlock Grid.Column="1"
						   VerticalAlignment="Center"
						   FontWeight="SemiBold"
						   Text="{Binding CurrentState}"/>

				<Button Grid.Column="2" HorizontalAlignment="Right"
						Content="{Binding IsConnected, Converter={x:Static converters:BooleanToConnectButtonTextConverter.Instance}}"
						Command="{Binding ToggleConnectionCommand}"
						ToolTip.Tip="Connect or disconnect using the selected profile"/>
			</Grid>

			<!-- Error Message -->
			<TextBlock Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2"
					   Foreground="Red"
					   IsVisible="{Binding CurrentState, Converter={x:Static converters:ConnectionStateToErrorVisibilityConverter.Instance}}"
					   Text="{Binding ErrorMessage}"
					   TextWrapping="Wrap"/>
		</Grid>
	</HeaderedContentControl>
</UserControl>